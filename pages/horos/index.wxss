/* index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #1a237e 0%, #000051 100%);
  color: white;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  position: relative;
}

.back-icon, .menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.back-icon image, .menu-icon image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  letter-spacing: 2rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.horoscope-card {
  width: 90%;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: white;
}

.zodiac-sign {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.divider {
  height: 1px;
  background: rgba(255, 255, 255, 0.2);
  margin: 30rpx 0;
}

.fortune-content {
  margin: 30rpx 0;
}

.date {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  text-align: center;
}

.horoscope-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.6;
  text-align: justify;
}

.card-footer {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 40rpx;
}

.tag {
  padding: 10rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  font-size: 24rpx;
  color: white;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

/* 优化后的加载动画 */
.dot-spinner {
  --uib-size: 2.8rem;
  --uib-speed: .9s;
  --uib-color: rgba(255, 255, 255, 0.8);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: var(--uib-size);
  width: var(--uib-size);
}

.dot-spinner__dot {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  width: 100%;
}

.dot-spinner__dot::before {
  content: '';
  height: 20%;
  width: 20%;
  border-radius: 50%;
  background-color: var(--uib-color);
  transform: scale(0);
  opacity: 0.5;
  animation: pulse0112 calc(var(--uib-speed) * 1.111) ease-in-out infinite;
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
}

/* 保持原有的动画关键帧设置 */
@keyframes pulse0112 {
  0%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }

  50% {
    transform: scale(1);
    opacity: 1;
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  letter-spacing: 2rpx;
}

/* 添加动态渐变背景 */
@keyframes gradientBG {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

page {
  background-size: 200% 200%;
  animation: gradientBG 15s ease infinite;
}