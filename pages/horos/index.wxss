/* index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #0a0a2e 0%, #1a1a4a 50%, #0a0a2e 100%);
  color: white;
  overflow: hidden;
}

/* 星空背景动画 */
.stars-background {
  position: fixed;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.star {
  position: absolute;
  width: 2px;
  height: 2px;
  background: white;
  border-radius: 50%;
  animation: twinkle 2s infinite;
}

@keyframes twinkle {
  0%, 100% { opacity: 0.2; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.5); }
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.header {
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

/* 返回和菜单图标使用CSS绘制 */
.back-icon, .menu-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.back-icon::before {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-left: 2px solid rgba(255, 255, 255, 0.8);
  border-bottom: 2px solid rgba(255, 255, 255, 0.8);
  transform: rotate(45deg);
  left: 15rpx;
  top: 13rpx;
}

.menu-icon::before {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 2px;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 -6rpx 0 rgba(255, 255, 255, 0.8),
    0 6rpx 0 rgba(255, 255, 255, 0.8);
  top: 50%;
  left: 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  letter-spacing: 4rpx;
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* 卡片样式优化 */
.horoscope-card {
  width: 90%;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20px);
  border-radius: 30rpx;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  transform: translateY(30rpx);
  opacity: 0;
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.horoscope-card.show {
  transform: translateY(0);
  opacity: 1;
}

.card-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 用户信息样式 */
.user-info {
  position: relative;
  z-index: 1;
  text-align: center;
}

.user-name {
  font-size: 48rpx;
  font-weight: 600;
  background: linear-gradient(45deg, #fff, #a0a0ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
  display: block;
}

.zodiac-sign {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 4rpx;
}

/* 星座连线效果 */
.constellation-line {
  height: 2px;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255,255,255,0.2) 50%,
    transparent 100%
  );
  margin: 30rpx 0;
  position: relative;
}

.constellation-line::before,
.constellation-line::after {
  content: '';
  position: absolute;
  width: 4px;
  height: 4px;
  background: white;
  border-radius: 50%;
  top: -1px;
  animation: twinkle 2s infinite;
}

.constellation-line::before { left: 30%; }
.constellation-line::after { right: 30%; }

/* 运势内容样式 */
.fortune-content {
  margin: 30rpx 0;
}

.date {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  margin-bottom: 20rpx;
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
}

.horoscope-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.8;
  text-align: justify;
}

/* 标签样式优化 */
.card-footer {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 40rpx;
}

.tag {
  padding: 10rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  font-size: 24rpx;
  color: white;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.tag.glow-effect::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, rgba(255,255,255,0.2) 0%, transparent 70%);
  animation: rotate 3s linear infinite;
}

/* 新的神秘加载动画 */
.mystic-spinner {
  position: relative;
  width: 100rpx;
  height: 100rpx;
}

.mystic-circle {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-top-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.constellation-dots {
  position: absolute;
  width: 100%;
  height: 100%;
  animation: rotate 10s linear infinite;
}

.constellation-dot {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: white;
  border-radius: 50%;
  animation: twinkle 2s infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 文字渐显动画 */
.reveal-text {
  opacity: 0;
  transform: translateY(20rpx);
  animation: revealText 0.8s forwards;
}

@keyframes revealText {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 为不同元素设置不同的动画延迟 */
.user-name { animation-delay: 0.2s; }
.zodiac-sign { animation-delay: 0.4s; }
.date { animation-delay: 0.6s; }
.horoscope-text { animation-delay: 0.8s; }
.tag:nth-child(1) { animation-delay: 1s; }
.tag:nth-child(2) { animation-delay: 1.2s; }
.tag:nth-child(3) { animation-delay: 1.4s; }